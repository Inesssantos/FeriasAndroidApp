<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_onMap"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16sp"
    android:background="@drawable/background_popup_menu"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/hotel_CoverPhoto_cardView"
        android:layout_width="143dp"
        android:layout_height="101dp"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hotel_CoverPhoto_onMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hotel_Name_onMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/archivo_bold"
        android:text="Name place"
        android:textAppearance="@style/custom_headline6"
        android:textColor="@color/primary_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_CoverPhoto_cardView" />

    <TextView
        android:id="@+id/hotel_Price_onMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:drawableRight="@drawable/ic_euro"
        android:text="xxxxxx"
        android:textAppearance="@style/custom_subtitle2"
        android:textColor="@color/primary_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hotel_City_onMap"
        app:layout_constraintTop_toBottomOf="@+id/hotel_Name_onMap" />

    <TextView
        android:id="@+id/hotel_City_onMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/archivo_semibold"
        android:text="City place"
        android:textAppearance="@style/custom_body2"
        android:textColor="@color/secondary_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_Name_onMap" />

    <RatingBar
        android:id="@+id/hotel_Rating_onMap"
        style="@android:style/Widget.Material.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:numStars="5"
        android:progressTint="@color/yellow"
        android:rating="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/hotel_City_onMap"
        app:layout_constraintTop_toBottomOf="@+id/hotel_City_onMap" />

</androidx.constraintlayout.widget.ConstraintLayout>